<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:rowCount="4" android:columnCount="3" >

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="#00000000"
        android:src="@drawable/arrow_left"/>

    <ImageView
        android:id="@+id/list_photo"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_rowSpan="3"
        android:src="@drawable/sandwich" />
    <TextView
        android:id="@+id/title"
        android:layout_row="1"
        android:text="내가 아침 먹고 달라진 것들"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp" />
    <TextView
        android:id="@+id/content"
        android:text="2020년 부터 매일 아침을 먹기로\n마음 먹었다. 그 뒤로 꾸준히 가리지않고..."
        android:textSize="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp" />
    <TextView
        android:id="@+id/date"
        android:text="2022.07.08"
        android:textColor="#818181"
        android:layout_marginLeft="20dp"
        android:textSize="9dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookmark"
        android:layout_row="2"
        android:layout_marginLeft="50dp"
        android:button="@drawable/confirm_btn"
        android:checked="false" />
</GridLayout>